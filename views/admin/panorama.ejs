<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>panorama</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/pannellum@2.5.6/build/pannellum.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <form
      class="container-fluid"
      enctype="multipart/form-data"
      action="/admin/panorama"
      method="post"
    >
      <h3>New panorama</h3>

      <div class="input-group mb-3">
        <input
          type="text"
          class="form-control"
          placeholder="Panorama name"
          name="panoramaName"
        />
      </div>

      <label for="imgInput" class="form-label mb-3">Add new panorma file</label>
      <input
        class="form-control mb-3"
        accept="image/*"
        type="file"
        id="imgInput"
        name="panoramaFile"
      />

      <div class="container-xl">
        <img id="blah" src="#" class="img-thumbnail" alt="your image" />
      </div>
      <button class="btn btn-primary mb-3" value="save">Save</button>
    </form>

    <script>
      imgInput.onchange = (evt) => {
        const [file] = imgInput.files;
        if (file) {
          blah.src = URL.createObjectURL(file);
        }
      };
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
