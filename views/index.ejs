    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }

      .btn-group-top {
        display: flex;
        justify-content: center;
        position: absolute;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
      }

      .btn-group-top .btn {
        width: 60px;
        height: 60px;
        margin: 0 5px;
        font-size: 24px;
      }
    </style>
