      }
      .custom-hotspot38 {
        background-image: url("/assets/img/numbers/38.png");
      }
      .custom-hotspot81 {
        background-image: url("/assets/img/numbers/81.png");
      }
      .custom-hotspot33 {
        background-image: url("/assets/img/numbers/33.png");
      }
      .custom-hotspot30 {
        background-image: url("/assets/img/numbers/30.png");
      }
      .custom-hotspot27 {
